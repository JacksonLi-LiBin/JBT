<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grew_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/login_item_padding"
    android:paddingRight="@dimen/login_item_padding" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grew_bg"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_grew_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/main_menu_item_padding"
                android:paddingTop="@dimen/main_menu_item_padding" >

                <LinearLayout
                    android:id="@+id/open_course"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/deep_grew_bg"
                    android:onClick="menuItemClick"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/menu_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical|right"
                        android:text="@string/schedule" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="@string/main_bg_img_des"
                        android:src="@drawable/calendar" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_grew_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/main_menu_item_padding"
                android:paddingTop="@dimen/main_menu_item_padding" >

                <LinearLayout
                    android:id="@+id/open_grades"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/deep_grew_bg"
                    android:onClick="menuItemClick"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/menu_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical|right"
                        android:text="@string/grades" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="@string/main_bg_img_des"
                        android:src="@drawable/check" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_grew_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/main_menu_item_padding"
                android:paddingTop="@dimen/main_menu_item_padding" >

                <LinearLayout
                    android:id="@+id/chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/deep_grew_bg"
                    android:onClick="menuItemClick"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/menu_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical|right"
                        android:text="@string/techtalk" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="@string/main_bg_img_des"
                        android:src="@drawable/bubble" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_grew_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/main_menu_item_padding"
                android:paddingTop="@dimen/main_menu_item_padding" >

                <LinearLayout
                    android:id="@+id/open_job"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/deep_grew_bg"
                    android:onClick="menuItemClick"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/menu_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical|right"
                        android:text="@string/job" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="@string/main_bg_img_des"
                        android:src="@drawable/nail" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_grew_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/main_menu_item_padding"
                android:paddingTop="@dimen/main_menu_item_padding" >

                <LinearLayout
                    android:id="@+id/recommend_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/deep_grew_bg"
                    android:onClick="menuItemClick"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/menu_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical|right"
                        android:text="@string/recommend_friend" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="@string/main_bg_img_des"
                        android:src="@drawable/people" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_grew_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/main_menu_item_padding"
                android:paddingTop="@dimen/main_menu_item_padding" >

                <LinearLayout
                    android:id="@+id/contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/deep_grew_bg"
                    android:onClick="menuItemClick"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/menu_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical|right"
                        android:text="@string/contact_us" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="@string/main_bg_img_des"
                        android:src="@drawable/phone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_grew_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/main_menu_item_padding"
                android:paddingTop="@dimen/main_menu_item_padding" >

                <LinearLayout
                    android:id="@+id/change_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/deep_grew_bg"
                    android:onClick="menuItemClick"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/menu_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical|right"
                        android:text="@string/change_password" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="@string/main_bg_img_des"
                        android:src="@drawable/key_main" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/light_grew_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/main_menu_item_padding"
                android:paddingTop="@dimen/main_menu_item_padding" >

                <LinearLayout
                    android:id="@+id/exit_app"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/deep_grew_bg"
                    android:onClick="menuItemClick"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/menu_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical|right"
                        android:text="@string/exit" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:contentDescription="@string/main_bg_img_des"
                        android:src="@drawable/exit" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>