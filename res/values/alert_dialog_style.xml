<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/white_bg</item>
    </style>

    <style name="dialog_text">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialog_text_error">
        <item name="android:textColor">@color/red_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dialog_text_title">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="noti_white_text">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>